<body>
  <nav>
    <a href="Home">Home</a>
    <a href="/about">About</a>
    <a href="/projects">Projects</a>
    <a href="/service">Service</a>
    <a href="/contact">Contact</a>
  </nav>
  
  <h1>Contact Me</h1>
  <section class="contact" id="contact">
    <div class="max-width">
      <h2 class="title">Contact me</h2>
      <div class="contact-content">
        <div class="column left">
          <div class="text">Get in Touch</div>
          <p>
            To contact me you can email me. Or send me message below.
          </p>
          <div class="icons">
            <div class="row">
              <i class="fas fa-user"></i>
              <div class="info">
                <div class="head">Name</div>
                <div class="sub-title">Nischal Adhikari</div>
              </div>
            </div>
            <div class="row">
              <i class="fas fa-map-marker-alt"></i>
              <div class="info">
                <div class="head">Address</div>
                <div class="sub-title">Scarborough,Toronto</div>
              </div>
            </div>
            <div class="row">
              <i class="fas fa-envelope"></i>
              <div class="info">
                <div class="head">Email</div>
                <div class="sub-title">adhikari.nischal2011@gmail.com</div>
              </div>
            </div>
          </div>
        </div>
        <div class="column right">
          <div class="text">Message me</div>
          <form action="#">
            <div class="fields">
              <div class="field name">
                <input type="text" id="message-input" placeholder="Name" required />
              </div>
              <div class="field email">
                <input type="text" id="message-input" placeholder="email" required />
              </div>
            </div>
            <div class="field">
              <input type="text" id="message-input" placeholder="Subject" required />
            </div>
            <div class="field textarea">
              <textarea id="message-input"
                cols="30"
                rows="10"
                placeholder="Describe project.."
                required
              ></textarea>
            </div>
            <div class="button">
              <button type="submit">Send message</button>
            </div>
            
          </form>
        </div>
      </div>
    </div>
  </section>
</body>
</html>
